@using Microsoft.Extensions.FileProviders
@model IDirectoryContents

<h2> Contact : Folder Content</h2>
<ul>
    @foreach (IFileInfo item in Model)
    {
        if (item.IsDirectory)
        {
            <li> @item.Name  - Directory</li>
        }
        else
        {
            <li> @item.PhysicalPath</li>
        }
    }

</ul>

<form method="post" enctype="multipart/form-data" asp-controller="Home" asp-action="FileUpload">
    <div class="form-group">
        <div class="col-md-10">
            <p>Upload one or more files using this form:</p>
            <input type="file" name="files" multiple />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Upload" />
        </div>
    </div>
</form>
